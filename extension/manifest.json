{
  "manifest_version": 2,

  "name": "surfRight",
  "description": "This extension allows you to statistics time you use the web.",
  "version": "1.0",
  "default_locale": "en",
  
  "permissions": [
    "tabs",
    "cookies",
    "http://localhost:8080/*",
    "alarms"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/libs/jquery-2.0.3.js",
      "js/libs/db.js",
      "js/util.js",
      "js/data.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:8080/*"],
      "js": ["js/libs/jquery-2.0.3.js", "js/auth.js"]
    }
  ],
  "offline_enabled": true,
  "options_page": "settings.html"
}