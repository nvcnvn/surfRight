{
  "manifest_version": 2,

  "name": "surfRight",
  "description": "This extension allows you to statistics time you use the web.",
  "version": "1.0",

  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "surfRight.popup.html"
  },
  "background": {
    "scripts": ["libs/jquery-2.0.3.js", "surfRight.js"],
    "persistent": false
  }
}