{
  "manifest_version": 2,

  "name": "surfRight",
  "description": "This extension allows you to statistics time you use the web.",
  "version": "1.0",

  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/libs/jquery-2.0.3.js",
      "js/libs/db.js",
      "js/util.js",
      "js/data.js",
      "js/background.js"
    ],
    "persistent": false
  }
}