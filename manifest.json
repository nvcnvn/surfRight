{
  "manifest_version": 2,

  "name": "surfRight",
  "description": "This extension allows you to statistics time you use the web.",
  "version": "1.0",

  "permissions": [
    "webRequest",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "surfRight.popup.html"
  },
  "background": {
    "scripts": ["surfRight.js"],
    "persistent": true
  }
}